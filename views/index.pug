extends layout

mixin userRow(firstName, lastName, email)
   tr 
      td= firstName
      td= lastName
      td= email

block content
   h2 Existing Users
   table
      thead
         tr
            th id
            th First Name
            th Last Name
            th Email
            th Age
            th Favorite Beatle
            th Likes Ice Cream
      tbody
         each user in users 
            +userRow(user.firstName, user.lastName, user.email)
            
